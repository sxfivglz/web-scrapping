{
  "start_url": "https://mx.indeed.com/",
  "actions": [
    {
      "action": "input",
      "by": "ID",
      "value": "text-input-what",
      "input_value": "Desarrollador web"
    },
    {
      "action": "input",
      "by": "ID",
      "value": "text-input-where",
      "input_value": "Torre√≥n, Coah"
    },
    {
      "action": "key_press",
      "by": "ID",
      "value": "text-input-where",
      "key": "ENTER"
    },
    {
      "action": "wait",
      "wait": 5
    },
    {
      "action": "get_element_text",
      "by": "CLASS_NAME",
      "value": "jobsearch-JobCountAndSortPane-jobCount",
      "save_as": "job_count"
    },
    {
      "action": "find_elements",
      "by": "CLASS_NAME",
      "value": "job_seen_beacon",
      "actions": [
        {
          "action": "click",
          "by": "CLASS_NAME",
          "value": "big6_visualChanges css-1v79ar eu4oa1w0"
        },
        {
          "action": "wait",
          "wait": 5
        },
        {
          "action": "get_element_text",
          "by": "XPATH",
          "value": "/html/body/main/div/div[2]/div/div[5]/div/div[2]/div/div/div[2]/div[2]/div[1]/div/div[1]/div[1]/h2/span[1]",
          "save_as": "title"
        },
        {
          "action": "get_element_text",
          "by": "XPATH",
          "value": "/html/body/main/div/div[2]/div/div[5]/div/div[2]/div/div/div[2]/div[2]/div[1]/div/div[1]/div[2]/div/div/div/div[1]/div/span/a",
          "save_as": "company"
        },
        {
          "action": "get_element_text",
          "by": "XPATH",
          "value": "/html/body/main/div/div[2]/div/div[5]/div/div[2]/div/div/div[2]/div[2]/div[1]/div/div[2]/div/div",
          "save_as": "salary"
        },
        {
          "action": "store_data",
          "data": {
            "Puesto": "{title}",
            "Empresa": "{company}",
            "Pago y horario": "{salary}"
          }
        }
      ]
    }
  ],
  "output": {
    "filename": "trabajos.xlsx",
    "columns": ["Puesto", "Empresa", "Pago y horario"]
  }
}
