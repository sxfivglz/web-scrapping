{
    "start_url": "https://www.meteored.mx",
    "actions": [
        {
            "action": "input",
            "by": "ID",
            "value": "search_pc",
            "input_value": "Torreón, Coahuila"
        },
        {
            "action": "wait",
            "wait": 3
        },
        {
            "action": "click",
            "by": "XPATH",
            "value": "/html/body/header/div[1]/div/div[1]/form/div/ul/li[1]"
        },
        {
            "action": "wait",
            "wait": 3
        },
        {
            "action": "find_elements",
            "by": "XPATH",
            "value": "/html/body/main/div[2]/section/section[2]/div/ul/li",
            "columns": [
                {
                    "action": "click",
                    "by": "XPATH",
                    "value": "/html/body/main/div[2]/section/section[2]/div/ul/li"
                },
                {
                    "action": "get_element_text",
                    "by": "CSS_SELECTOR",
                    "value": "body > main > div.flex-w > section > section.dias.card_struct > div > ul > li.grid-item.dia> span > span.text-0",
                    "save_as": "day_name"
                },
                {
                    "action": "get_element_text",
                    "by": "CLASS_NAME",
                    "value": "subtitle-m",
                    "save_as": "date"
                },
                {
                    "action": "get_element_text",
                    "by": "CLASS_NAME",
                    "value": "temp",
                    "save_as": "temperature"
                },
                {
                    "action": "store_data",
                    "data": {
                        "Día": "{day_name}",
                        "Fecha": "{date}",
                        "Temperatura Máxima y Mínima": "{temperature}"
                    }
                }
            ]
        }
        
    ],
    "output": {
        "filename": "clima.xlsx",
        "columns": ["Día", "Fecha", "Temperatura Máxima y Mínima"]
    }
}
